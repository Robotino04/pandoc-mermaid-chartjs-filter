{
  "name": "pandoc-mermaid-chartjs-filter",
  "version": "0.1.1",
  "description": "Pandoc filter for creating diagrams in mermaid, with Chart.js or other syntaxes in markdown code blocks.",
  "main": "main.js",
  "bin": {
    "chart-filter": "main.js"
  },
  "preferGlobal": true,
  "scripts": {
    "examples": "pandoc examples.md --filter ./main.js -o examples.pdf"
  },
  "keywords": [
    "pandoc",
    "mermaid",
    "chart",
    "markdown",
    "filter"
  ],
  "author": "Mark Lubkowitz <me@mlu.io>",
  "license": "MIT",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^10.2.4",
    "canvas": "^2.11.2",
    "chart.js": "^4.3.0",
    "pandoc-filter": "^2.1.0",
    "yaml": "^2.3.1"
  }
}
